<% if (action==="add") { %>
<h3 class="mt-5">Add Data Gejala</h3>
<form method="POST" class="w-50 d-flex flex-column">
  <div class="form-group">
    <label for="exampleFormControlInput1">Kode Gejala</label>
    <input
      type="text"
      class="form-control"
      name="kode_gejala"
      placeholder="Ex: GJ000"
      required
    />
  </div>
  <div class="form-group mt-3">
    <label for="exampleFormControlInput1">Nama Gejala</label>
    <input
      type="text"
      class="form-control"
      name="nama_gejala"
      id="exampleFormControlInput1"
      placeholder="Ex: susah sinyal"
    />
  </div>
  <button class="mt-5 btn btn-primary w-25 align-self-end">Simpan</button>
</form>
<% } %> <% if (action==="edit") { %>
<h3 class="mt-5">Edit Data Gejala</h3>
<form method="POST" class="w-50 d-flex flex-column">
  <div class="form-group">
    <label for="exampleFormControlInput1">Kode Gejala</label>
    <input
      type="text"
      class="form-control"
      name="kode_gejala"
      placeholder="Ex: GJ000"
      required
      disabled
      value="<%- dataGejala[0].id_gejala %> "
    />
  </div>
  <div class="form-group mt-3">
    <label for="exampleFormControlInput1">Nama Gejala</label>
    <input
      type="text"
      class="form-control"
      name="nama_gejala"
      id="exampleFormControlInput1"
      placeholder="Ex: susah sinyal"
      value="<%- dataGejala[0].nama_gejala %> "
    />
  </div>
  <button class="mt-5 btn btn-primary w-25 align-self-end">Simpan</button>
</form>
<% } %>
