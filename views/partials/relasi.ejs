<div class="w-75 d-flex flex-column p-3">
  <h2 class="mt-5">Data Relasi</h2>
  <div class="mt-2 d-flex flex-column">
    <a href="/admin/add/relasi" class="btn btn-primary align-self-end"
      >Tambah data</a
    >
    <div class="tableFixHead mt-2">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Pertanyaan Gejala</th>
            <th scope="col">Ya</th>
            <th scope="col">Tidak</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% hasil.forEach((data,i) => { %>
          <tr>
            <th><%-i+1 %></th>
            <th><%-data.tanya_awal %> - <%-data.gejala %></th>
            <td><%- data.ya %></td>
            <td><%- data.tidak %></td>
            <td class="d-flex justify-content-evenly">
              <a
                href="/admin/edit/relasi/<%- data.id %> "
                class="btn btn-success"
                >Ubah</a
              >
              <form action="/admin/remove/relasi/<%- data.id %> " method="post">
                <button class="btn btn-danger">Hapus</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
