<h3>Edit Relasi</h3>
<form method="POST" class="w-50 d-flex flex-column">
  <div class="form-group">
    <label for="exampleFormControlInput1">Gejala awal</label>
    <select
      class="form-control"
      id="exampleFormControlInput1"
      placeholder="Ex: GJ000"
      required
      name="gejala_awal"
    >
      <option value=" " selected disabled>Pilih Gejala awal</option>
      <% dataGejala.forEach(gejala => { %>
      <option value="<%- gejala.id_gejala %>">
        <%- gejala.id_gejala %> - <%- gejala.nama_gejala %>
      </option>
      <% }) %>
    </select>
  </div>
  <div class="form-group mt-3">
    <label for="exampleFormControlInput1">Ya</label>
    <select
      class="form-control"
      id="exampleFormControlInput1"
      placeholder="Ex: GJ000"
      required
      name="ya"
    >
      <option value=" " selected disabled>Pilih Kemungkinan Ya</option>
      <% dataGejala.forEach(gejala => { %>
      <option value="<%- gejala.id_gejala %>">
        <%- gejala.id_gejala %> - <%- gejala.nama_gejala %>
      </option>
      <% }) %>
      <option disabled="disabled">----</option>
      <% dataRusak.forEach(rusak => { %>
      <option value="<%- rusak.id_rusak %>">
        <%- rusak.id_rusak %> - <%- rusak.nama_rusak %>
      </option>
      <% }) %>
      <option value="NONE">None</option>
    </select>
  </div>
  <div class="form-group mt-3">
    <label for="exampleFormControlInput1">Tidak</label>
    <select
      class="form-control"
      id="exampleFormControlInput1"
      placeholder="Ex: GJ000"
      required
      name="tidak"
    >
      <option value=" " selected disabled>Pilih Kemungkinan tidak</option>
      <% dataGejala.forEach(gejala => { %>
      <option value="<%- gejala.id_gejala %>">
        <%- gejala.id_gejala %> - <%- gejala.nama_gejala %>
      </option>
      <% }) %>
      <option disabled="disabled">----</option>
      <% dataRusak.forEach(rusak => { %>
      <option value="<%- rusak.id_rusak %>">
        <%- rusak.id_rusak %> - <%- rusak.nama_rusak %>
      </option>
      <% }) %>
      <option value="NONE">None</option>
    </select>
  </div>
  <button class="mt-5 btn btn-primary w-25 align-self-end">Simpan</button>
</form>
