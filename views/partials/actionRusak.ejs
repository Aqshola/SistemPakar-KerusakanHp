<h3>Edit Data Rusak</h3>
<form method="POST" class="w-50 d-flex flex-column">
  <div class="form-group">
    <label for="exampleFormControlInput1">Kode Kerusakan</label>
    <input
      type="text"
      class="form-control"
      name="kode_rusak"
      placeholder="Ex: KR000"
      required
    />
  </div>
  <div class="form-group mt-3">
    <label for="exampleFormControlInput1">Nama Kerusakan</label>
    <input
      type="text"
      class="form-control"
      name="nama_rusak"
      placeholder="Ex: Komponen rusak"
    />
  </div>
  <button class="mt-5 btn btn-primary w-25 align-self-end">Simpan</button>
</form>
